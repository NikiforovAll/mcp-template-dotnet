  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "revealProblems": "onProblem"
      },
      "detail": "Builds the solution ‚öôÔ∏è",
      "icon": {
        "color": "terminal.ansiGreen"
      }
    },
    {
      "label": "cake:build",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "cake",
        "--target",
        "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "revealProblems": "onProblem"
      },
      "problemMatcher": "$msCompile",
      "detail": "Builds the solution ‚öôÔ∏è",
      "icon": {
        "color": "terminal.ansiGreen"
      }
    },
    {
